<h1><%= product.name %></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Code</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%= product.id %></th>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.code %></td>
      </tr>
  </tbody>
</table>
<a href="/products/<%= product.id %>/edit" class="btn btn-primary">Update</a>