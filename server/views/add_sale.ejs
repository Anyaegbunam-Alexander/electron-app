<form action="/sales" method="post">
    <div class="container-fluid">
        <div id="all-sale-items">
            <div class="row mb-3" id="sale-item">
                <div class="col">
                    <label for="select-product" class="form-label">Product</label>
                    <select class="form-select" aria-label="Default select example" id="select-product" name="product_id">
                        <% products.forEach(function(product) { %>
                            <option value="<%= product.id %>" data-price="<%= product.price %>" data-quantity="<%= product.quantity %>"><%= product.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-3">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="text" name="amount" id="amount" class="form-control" readonly>
                </div>
                <div class="col-2">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" name="quantity" id="quantity" class="form-control" required min="1" value="1" onkeydown="return isArrowKey(event)">
                </div>
                <div class="col-2">
                    <br>
                    <button type="button" class="btn btn-danger mt-2" disabled hidden>Remove</button>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-primary" id="add-sale-item">Add Sale Item</button>
        </div>
        <div id="sale-summary" class="mt-4">
            <p>Total: <span id="total-amount"></span></p>
            <p>Items: <span id="total-items"></span></p>
        </div>
        <div class="d-grid mt-5">
            <button class="btn btn-success" type="submit">Save</button>
          </div>
    </div>
</form>
<script src="/js/addSale.js"></script>