<h1>Sale</h1>
<p>Date: <span class="fw-bold"><%= new Date(sale.date).toLocaleString() %></span></p>
<p>Total Amount: <span class="fw-bold"><%= sale.total_amount.toLocaleString() %></span></p>

<h5>Sale Items</h5>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Amount</th>
      <th scope="col">Sale Quantity</th>
      <th scope="col">Product Price</th>
      <th scope="col">Product Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% sale_items.forEach(function(sale_item, index) { %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= sale_item.name %></td>
        <td><%= sale_item.amount.toLocaleString() %></td>
        <td><%= sale_item.sale_item_quantity %></td>
        <td><%= sale_item.price.toLocaleString() %></td>
        <td><%= sale_item.product_quantity %></td>
      </tr>
    <% }); %>
  </tbody>
</table>