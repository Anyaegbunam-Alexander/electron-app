<h1>Sale</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Total Amount</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%= sale.id %></th>
        <td><%= sale.date %></td>
        <td><%= sale.total_amount %></td>
      </tr>
  </tbody>
</table>

<h1>Sale Items</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Amount</th>
      <th scope="col">Sale Quantity</th>
      <th scope="col">Product Price</th>
      <th scope="col">Product Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% sale_items.forEach(function(sale_item) { %>
      <tr>
        <th scope="row"><%= sale_item.id %></th>
        <td><%= sale_item.name %></td>
        <td><%= sale_item.amount %></td>
        <td><%= sale_item.sale_item_quantity %></td>
        <td><%= sale_item.price %></td>
        <td><%= sale_item.product_quantity %></td>
      </tr>
    <% }); %>
  </tbody>
</table>