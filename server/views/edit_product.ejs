<div class="container container-fluid">
    <h1>Edit <%= product.name %></h1>

    <form action="/products/<%= product.id %>/update" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" class="form-control" id="price" name="price" value="<%= product.price %>">
        </div>
        <div class="mb-3">
            <label for="quantity" class="form-label">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="quantity" value="<%= product.quantity %>">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </form>
    
    <div class="mt-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Edit Product Code
        </button>
            
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form action="/products/<%= product.id %>/code/" method="post">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label" for="code">Product Bar Code</label>
                                <input class="form-control" type="number" name="code" id="code" required value="<%= product.code %>">
                            </div>
                            <% if (!product.is_verified) {%>
                                <label for="server_id" class="form-label">Product Ven3 ID</label>
                                <input type="text" name="server_id" id="code" class="form-control" id="server_id" value="<%= product.server_id %>">
                            <% } %>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>